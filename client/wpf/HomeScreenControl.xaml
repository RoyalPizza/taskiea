<UserControl x:Class="Taskpiea.WPFClient.HomeScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Taskpiea.WPFClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="HOME_SCREEN" FontSize="8" FontStyle="Normal" Foreground="Gray"/>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="TASKPIEA" FontSize="22" FontWeight="Bold" Margin="10"/>
            <Button Name="OpenProjectButton" Content="Open Project" Click="OpenProjectButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
