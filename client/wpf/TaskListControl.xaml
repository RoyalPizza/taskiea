<UserControl x:Class="Taskpiea.WPFClient.TaskListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Taskpiea.WPFClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:TaskListViewModel />
    </UserControl.DataContext>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,5">
            <TextBox Width="200" Text="{Binding NewTaskName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <TextBox Width="300" Text="{Binding NewTaskDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <!--<Button Content="Add" Command="{Binding CreateNewTaskCommand}" Margin="5"/>-->
        </StackPanel>

        <DataGrid ItemsSource="{Binding TasksView}" AutoGenerateColumns="False" AddingNewItem="DataGrid_AddingNewItem"  RowEditEnding="DataGrid_RowEditEnding"  CellEditEnding="DataGrid_CellEditEnding" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                <!--<DataGridTextColumn Header="Assignee" Binding="{Binding Assignee}" Width="100"/>-->
                <!--<DataGridComboBoxColumn Header="Status" ItemsSource="{Binding Source={StaticResource StatusEnum}}" SelectedValueBinding="{Binding Status}" Width="100"/>-->
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>