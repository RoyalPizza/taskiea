<UserControl x:Class="Taskpiea.WPFClient.UserListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Taskpiea.WPFClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:UserListViewModel />
    </UserControl.DataContext>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,5">
            <TextBox Width="200" Text="{Binding NewUserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Add" Command="{Binding CreateNewUserCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding UsersView}" AutoGenerateColumns="False" CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
